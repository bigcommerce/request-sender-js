{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "inlineSources": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es6",
            "scripthost"
        ],
        "moduleResolution": "node",
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "target": "es5"
    },
    "include": [
        "src/**/*.ts"
    ]
}
